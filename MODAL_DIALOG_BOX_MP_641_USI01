MODULE user_command_0017 INPUT.
  CASE sy-ucomm.
    WHEN 'DISP'.
      SELECT * FROM spfli WHERE carrid = p_car.
        CALL SCREEN 0018 STARTING AT 10 08
                         ENDING AT 70 15.
      ENDSELECT.
  ENDCASE.
ENDMODULE.
