DATA : obj_custom  TYPE REF TO cl_gui_custom_container,
       obj_split   TYPE REF TO cl_gui_splitter_container,
       obj_grid1   TYPE REF TO cl_gui_container,
       obj_grid2   TYPE REF TO cl_gui_container,
