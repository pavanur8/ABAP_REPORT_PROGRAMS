       zcx_msg TYPE string.

DATA: lt_ekko TYPE TABLE OF ekko,
      lt_ekpo TYPE TABLE OF ekpo,
      lt_ekbe TYPE TABLE OF ekbe.

SELECT * FROM ekko INTO TABLE lt_ekko UP TO 10 ROWS.
SELECT * FROM ekpo INTO TABLE lt_ekpo UP TO 10 ROWS.
SELECT * FROM ekbe INTO TABLE lt_ekbe UP TO 10 ROWS.

CALL SCREEN 9000.

