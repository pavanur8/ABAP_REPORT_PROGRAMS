*&---------------------------------------------------------------------*
*& Report ZRFC_TEST_SYNC_641
*&---------------------------------------------------------------------*
*&
*&---------------------------------------------------------------------*
REPORT zrfc_test_sync_641.

DATA : lv_tid TYPE arfctid.
DATA : lv_fnum TYPE qretstate-qrfnum.
DATA : lv_flg TYPE char1.
DATA : ls_struct TYPE zbsp001_tab_641.

ls_struct-mandt = '100'.
ls_struct-sname = 'RAMESH'.
ls_struct-fname = 'SURESH'.
ls_struct-dob = '20010116'.
ls_struct-address = 'E-City'.

CALL FUNCTION 'ZFM_CREATE_ZBSP001_TAB641'
  DESTINATION 'NONE'
  EXPORTING
    im_struct = ls_struct
  IMPORTING
    ex_flg    = lv_flg.

IF lv_flg = abap_true.
  WRITE : 'sRFC' COLOR COL_HEADING.
  WRITE : 'ENTRY CREATED SUCCESSFULLY' COLOR COL_KEY.
ELSE.
  WRITE : 'ENTRY CREATION FAILED' COLOR COL_BACKGROUND.
ENDIF.
CLEAR : lv_tid, lv_fnum, lv_flg, ls_struct.
